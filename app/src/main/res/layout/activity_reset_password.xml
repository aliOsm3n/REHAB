<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ResetPassword"
    >


    <com.example.ascom.rehab.view.MyEditText
        android:inputType="textPassword"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_centerHorizontal="true"
        android:id="@+id/newPassword"
        android:hint="@string/newPassword"
        android:gravity="center"
        android:background="@drawable/anothorshape"
        android:layout_width="280dp"
        android:layout_height="50dp" />

    <com.example.ascom.rehab.view.MyEditText
        android:inputType="textPassword"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/anothorshape"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_below="@+id/newPassword"
        android:layout_centerHorizontal="true"
        android:id="@+id/RewritePassword"
        android:hint="@string/RewritePassword"
        android:gravity="center"
        android:layout_width="280dp"
        android:layout_height="50dp" />

    <com.example.ascom.rehab.view.CustomButton
        android:id="@+id/ConfirmPassword"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/fill_button2"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/RewritePassword"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:text="@string/ConfirmNewPassword"/>

</RelativeLayout>