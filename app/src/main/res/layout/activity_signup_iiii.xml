<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.ahmed.planeeye.RegisterActivity">

        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/emotion" />

        <com.example.ascom.rehab.view.CustomTextView
            android:layout_below="@+id/imageView4"
            android:id="@+id/thanksTV"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/greatThanks"
            />

        <com.example.ascom.rehab.view.CustomTextView
            android:layout_below="@+id/thanksTV"
            android:id="@+id/WriteTV"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/enterCode"
            android:textColor="@android:color/white" />

        <EditText
            android:inputType="textPassword"
            android:layout_below="@+id/WriteTV"
            android:id="@+id/key"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="***********"
            android:textColorHint="@color/white"
            android:textColor="@android:color/white" />

        <com.example.ascom.rehab.view.CustomTextView
            android:layout_below="@+id/key"
            android:id="@+id/DescTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            android:text="@string/emailCode"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"/>


        <com.example.ascom.rehab.view.CustomTextView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/DescTV"
            android:id="@+id/resend"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resend"
            android:textColor="@color/white"/>



        <com.example.ascom.rehab.view.CustomButton
            android:layout_below="@+id/resend"
            android:id="@+id/next"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/fill_button"
            android:text="@string/next"
            android:gravity="center"
            android:textColor="@android:color/white" />


    </RelativeLayout>
</ScrollView>