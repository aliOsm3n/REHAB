<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/openGrey"
    android:padding="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/messege_shp" />

    <com.example.ascom.rehab.view.CustomTextView
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/PatientName"
        android:id="@+id/Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_date"
        android:layout_toRightOf="@+id/PatientName"
        android:layout_marginRight="10dp" />


    <com.example.ascom.rehab.view.CustomTextView
        android:layout_toEndOf="@+id/image"
        android:id="@+id/PatientName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:text="@string/marid_name"
        android:layout_toRightOf="@+id/image" />




</RelativeLayout>